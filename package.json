{
  "name": "ifrc-vconf-api",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "repository": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s && npm run build",
    "postversion": "bin/deploy",
    "start": "node -r dotenv/config dist/index.js",
    "dev": "node -r dotenv/config -r ts-node/register src/cli.ts",
    "debug": "node --inspect-brk -r dotenv/config -r ts-node/register src/cli.ts"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "email-regex": "^4.0.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "valid-env": "^1.0.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/yargs": "^15.0.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "yorkie": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "types": "dist/index.d.js"
}
